FROM ubuntu
MAINTAINER Sam Irvine

USER root
RUN apt-get update -y && apt-get install -y wget default-jre default-jdk git maven

RUN apt-get install -y curl unzip

WORKDIR /opt

RUN curl -s get.sdkman.io | bash
RUN source "$HOME/.sdkman/bin/sdkman-init.sh" | bash
RUN sdk install groovy
RUN groovy -version | cat
ENTRYPOINT bash
